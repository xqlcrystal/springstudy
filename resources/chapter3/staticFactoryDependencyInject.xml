<?xml version="1.0" encoding="UTF-8"?>
<beans
xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="
http://www.springframework.org/schema/beans	      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context		   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  <!-- id 表示你这个组件的名字，class表示组件类 -->
<bean id="byindex" class="cn.javass.spring.chapter3.DependencyInjectByStaticFactory"
    factory-method="newInstance"
    >
    <constructor-arg index="0" value="byIndexStaticfactory"></constructor-arg>
    <constructor-arg index="1" value="1"></constructor-arg>
</bean>
<bean id="bytype" class="cn.javass.spring.chapter3.DependencyInjectByStaticFactory"
    factory-method="newInstance"
    >
    <constructor-arg type="java.lang.String" value="byTypeStaticfactory"></constructor-arg>
    <constructor-arg type="int" value="2"></constructor-arg>
    </bean>
<bean id="byname" class="cn.javass.spring.chapter3.DependencyInjectByStaticFactory"
    factory-method="newInstance"
    >
    <constructor-arg name="msg" value="byNamestaticfactory"></constructor-arg>
    <constructor-arg name="index" value="3"></constructor-arg>
</bean>
</beans>
